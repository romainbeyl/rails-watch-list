<div class="container">
  <h1>Lists</h1>
  <div class="card">
    <% @lists.each do |list| %>
        <h2><%= list.name %></h2>
       <% if list.photo.present? %>
        <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
        <p>""</p>
         <% end %>
        <%= link_to 'Show list', list_path(list), style: "text-decoration:none" %>
    <% end %>
  </div>
  <%= link_to 'Add a list', new_list_path(@list), style: "text-decoration:none" %>
